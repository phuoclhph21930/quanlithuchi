<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ReportYearFragment">

    <LinearLayout
        android:id="@+id/reportMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <ImageView
            android:id="@+id/imgtruocReportYeah"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            />
        <TextView
            android:id="@+id/dateReportYeah"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="7"
            android:gravity="center"
            android:background="@drawable/boder_layout"

            />
        <ImageView
            android:id="@+id/imgnextReportYeah"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/belowHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/reportMonth"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/boder_report"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi Tiêu:"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/ChiReportYeah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="end"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/boder_report"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu Nhập:"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/thuReportYeah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textColor="#0066FF"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="end"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vds"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/belowHeader"
        android:background="@drawable/boder_report"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu Chi:"
            android:textStyle="bold"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/thuChiReportYeah"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="0đ"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical"

            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vds"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabbarLayoutYeah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_TabYeah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabbarLayoutYeah"
            />
    </RelativeLayout>

</RelativeLayout>